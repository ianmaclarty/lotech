all: liblua.a

VPATH=src

LUA_C_FILES:=$(shell find src -name "*.c" -exec basename \{\} \; | grep -v "lua\.c" | grep -v "luac\.c")
LUA_O_FILES:=$(patsubst %.c,%.o,$(LUA_C_FILES))

ifndef LTCC
LTCC=gcc
endif

GCC_FLAGS=-I. $(LTCFLAGS) $(TARGET_FLAGS)
GCC=$(CROSS)$(LTCC)
AR=$(CROSS)ar rcus

$(LUA_O_FILES): %.o: %.c
	@echo C $@
	@$(GCC) $(GCC_FLAGS) -c $<

liblua.a: $(LUA_O_FILES)
	@echo AR $@
	@$(AR) $@ $^

.PHONY: clean
clean:
	rm -f *.o *.a
